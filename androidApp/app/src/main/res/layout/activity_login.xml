<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".login">
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/logoPic"
        android:layout_height="199dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/messageofLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ecareColor"
        android:textStyle="italic"
        android:layout_below="@id/logoPic"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:text="Enter your credentials" />

    <EditText
        android:id="@+id/email"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoPic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:hint="Enter Password"
        android:inputType="textPassword"></EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Login"
        app:backgroundTint="@color/ecareColor" />
    <TextView
        android:id="@+id/not_a_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="Not a member?" />

    <Button
        android:id="@+id/signup"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/not_a_member"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        app:backgroundTint="@color/ecareColor" />



</RelativeLayout>