<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".location"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/ecareColor"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/current"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently in: "
        android:layout_below="@+id/location"/>

    <ImageView
        android:id="@+id/loc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/location_foreground"
        android:layout_below="@+id/current"
        android:paddingTop="16dp"/>

    <TextView
        android:id="@+id/location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current"
        android:layout_toRightOf="@+id/loc"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="Unknown Location"
        android:textColor="@color/ecareColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/routing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/ecareColor"
        android:text="View Daily Routine"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/hist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/routing"
        android:backgroundTint="@color/ecareColor"
        android:text="View Location History"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>